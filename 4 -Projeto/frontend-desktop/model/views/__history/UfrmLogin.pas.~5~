unit UfrmLogin;

interface

uses
  System.SysUtils, System.Types, System.UITypes, System.Classes, System.Variants,
  FMX.Types, FMX.Controls, FMX.Forms, FMX.Graphics, FMX.Dialogs, FMX.Objects,
  FMX.Layouts, FMX.Controls.Presentation, FMX.StdCtrls, UfrmLogin.Registry;

type
  TfrmLogin = class(TForm)
    rectPrincipal: TRectangle;
    lytBotoes: TLayout;
    lytPrincipal: TLayout;
    imgLogo: TImage;
    rectLogin: TRectangle;
    Label1: TLabel;
    restRegistrar: TRectangle;
    rectSair: TRectangle;
    Label2: TLabel;
    Label3: TLabel;
    procedure rectSairClick(Sender: TObject);
    procedure restRegistrarClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frmLogin: TfrmLogin;

implementation

{$R *.fmx}

procedure TfrmLogin.rectSairClick(Sender: TObject);
begin
  Application.Terminate;
end;

procedure TfrmLogin.restRegistrarClick(Sender: TObject);
begin
   Application.CreateForm(TfrmLoginRegistry, frmLoginRegistry);
   frmLogin.Show;
   Self.Close;
end;

end.
